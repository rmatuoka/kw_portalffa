<div id="Box_form">
<%= form_for([:admin, @banner], :html => { :multipart => :true }) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, :class=> "form-control" %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description, :class=> "form-control" %>
  </p>
  <p>
    <%= f.label :link %>
    <%= f.text_field :link, :class=> "form-control" %>
  </p>
  <p>
    <%= f.label :link_target %>
    <%= f.text_field :link_target, :class=> "form-control" %>
  </p>
	<p>
	    <%= f.label :file %>
	    <%= f.file_field :file %>
	  </p>
	<p>
	    <%= f.label :published %>
	    <%= f.check_box :published %>
  	</p>
  	<br />
  	<p class="box-footer"><%= submit_tag "Voltar",:type=>"button",:onclick=>"window.open('"+admin_banners_path+"','_self');", :class => "btn btn-default", :style=>"margin-right: 5px;"%> <%= f.submit nil, :class => "btn btn-default"%></p>
<% end %>
</div>
