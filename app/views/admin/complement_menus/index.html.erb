<% title show_model_name(::ComplementMenu, true) %>

<section class="content-header">
  <h1>
    <%= show_model_name(::ComplementMenu, true) %>
    <br/>
    <small><%= t('activerecord.attributes.complement_menu.messages.index')%></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <a href="/admin">
        <i class="fa fa-dashboard"></i>
        Home
      </a>
    </li>
    <li class="active"> <%= show_model_name(::ComplementMenu, true) %> </li> 
  </ol>
</section>

<section class="content">
  <p><%= submit_tag t('attributes.create_new'),:type=>"button",:onclick=>"window.open('"+new_admin_complement_menu_path+"','_self');", :class => "btn btn-primary"%> </p>
  <div class="box">
    <div class="box-body table-responsive no-padding">
      <table cellspacing="0" class="table table-hover" width="80%">
	      <thead> 
		      <tr>
			      <th style="width:20%;"><%=t 'attributes.name' %></th>
			      <th style="width:40%;"><%=t 'activerecord.attributes.complement_menu.destination' %></th>				
			      <th style="width:15%;"><%=t 'attributes.published' %> ?</th>
			      <th colspan="3" style="width:25%;"><%=t 'attributes.actions' %></th>
		      </tr>
	      </thead> 
	      <tbody>
	      <% for complement_menu in @complement_menus %>
	      <tr <%='class=notactive' if !complement_menu.published%>>
		      <td><%= complement_menu.name %></td>
		      <td><%= complement_menu.destination %></td>	
		      <td><%= print_active(complement_menu.published) %></td>
		      <td><%= link_to t('attributes.showing'), [:admin, complement_menu], :class=>"btn btn-default" %></td>
		      <td><%= link_to t('attributes.editing'), edit_admin_complement_menu_path(complement_menu), :class=>"btn btn-default" %></td>
		      <td><%= link_to t('attributes.exclude'), [:admin, complement_menu], :confirm => t('system_messages.notice_to_delete'), :method => :delete, :class=>"btn btn-default" %></td>
	      </tr>
	      <% end %>
	      </tbody>
      </table>      
    </div>    
  </div>
</section>
