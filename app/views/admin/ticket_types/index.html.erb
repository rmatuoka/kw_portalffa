<% title show_model_name(::TicketType, true) %>
<section class="content-header">
  <h1>
    <%= show_model_name(::TicketType, true) %>
    <br/>
    <small><%= t('activerecord.attributes.ticket_type.messages.index')%></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <a href="/admin">
        <i class="fa fa-dashboard"></i>
        Home
      </a>
    </li>
    <li class="active"> <%= show_model_name(::TicketType, true) %> </li> 
  </ol>
</section>

<section class="content">
  <p><%= submit_tag t('attributes.create_new'),:type=>"button",:onclick=>"window.open('"+new_admin_ticket_type_path+"','_self');", :class => "btn btn-primary"%> </p>
  <div class="box">
    <div class="box-body table-responsive no-padding">
      <table cellspacing="0" class="table table-hover" width="80%">
	      <thead> 
		      <tr>
			      <th style="width:35%;"><%=t 'activerecord.attributes.ticket_type.name' %></th>	
			      <th style="width:20%;"><%=t 'activerecord.attributes.ticket_type.discount' %></th>			
			      <th style="width:15%;"><%=t 'activerecord.attributes.ticket_type.published' %></th>			

			      <th colspan="3" style="width:30%;"><%=t 'attributes.actions' %></th>
		      </tr>
	      </thead> 
	      <tbody>
	      <% for ticket_type in @ticket_types %>
	      <tr <%='class=notactive' if !ticket_type.published%>>
		      <td><%= ticket_type.name %></td>
		      <td><%= number_to_currency(ticket_type.discount) %></td>		
		      <td><%= print_active(ticket_type.published) %></td>
		
		      <td><%= link_to t('attributes.showing'), [:admin, ticket_type], :class=>"btn btn-default" %>
		        <%= link_to t('attributes.editing'), edit_admin_ticket_type_path(ticket_type), :class=>"btn btn-default" %>
		        <%= link_to t('attributes.exclude'), [:admin, ticket_type], :confirm => t('system_messages.notice_to_delete'), :method => :delete, :class=>"btn btn-default" %>
		      </td>
	      </tr>
	      <% end %>
	      </tbody>
      </table>   
    </div>    
  </div>
</section>
