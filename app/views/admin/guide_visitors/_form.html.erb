<%= form_for [:admin, @guide_visitor] do |f| %>
  <%= f.error_messages %>
  <p>
    Guia:<br />
    <%= @guide_visitor.guide.name %>
  </p>
  <div class="form-group form-group-lg">
    <%= f.label :year %><br />
    <%if (User.find(current_user.id).has_role? :admin) %>
      <%= f.datetime_select :year, :class=>"form-control"%> 
    <%else%>
      <%= f.datetime_select :year , :disabled => true%>
    <%end%>
  </div>
  <div class="form-group form-group-lg">
    <%= f.label :passengers %>
    <%= f.text_field :passengers, :class=>"form-control" %>
  </div>
  <div class="form-group form-group-lg">
    <%= link_to(t('attributes.go_back'),admin_guide_visitors_path, :class => "btn btn-lg btn-primary" )%>
    <%= f.submit nil, :class => "btn btn-lg btn-success" %>
  </div>
<% end %>
