<% title @ticket.name %>
<section class="content-header">
  <h1>
    <%= @ticket.name %>
    <br/>
    <small><%= t('activerecord.attributes.ticket.messages.show')%></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <a href="/admin">
        <i class="fa fa-dashboard"></i>
        Home
      </a>
    </li>
    <li class="active"> <%= show_model_name(::Ticket, true) %> </li> 
  </ol>
</section>

<section class="content">
  <div class="box">
    <div class="box-body">
      <p>
        <strong><%=t 'activerecord.attributes.ticket.name' %>:</strong>
        <%= @ticket.name %>
      </p>
      <p>
        <strong><%=t 'activerecord.attributes.ticket.ticket_date' %>:</strong>
        <%= I18n.localize(@ticket.ticket_date) %>
      </p>
      <p>
        <strong><%=t 'activerecord.attributes.ticket.price' %>:</strong>
        <%= number_to_currency(@ticket.price) %>
      </p>
      <p>
        <strong><%=t 'activerecord.attributes.ticket.ticket_type_id' %>:</strong>
        <%= @ticket.ticket_type.name %>
      </p>
      <p>
        <strong><%=t 'activerecord.attributes.ticket.ticket_category_id' %>:</strong>
        <%= @ticket.ticket_category.name %>
      </p>
      <p>
        <strong><%=t 'activerecord.attributes.ticket.above' %>:</strong>
        <%= @ticket.above %>
        <strong><%=t 'activerecord.attributes.ticket.discount' %>:</strong>
        <%= number_to_currency(@ticket.discount) %>
      </p>
      <p>
        <strong><%=t 'activerecord.attributes.ticket.published' %>:</strong>
        <%= print_active(@ticket.published) %>
      </p>
      <br />
      <p class="box-footer">
	      <%= submit_tag t('attributes.go_back'),:type=>"button",:onclick=>"window.open('"+admin_tickets_path()+"','_self');", :class => "btn btn-default", :style=>"margin-right: 5px;"%>
      </p>    
    </div>    
  </div>
</section>


