<% 
	content_for :title do "Resultado da Busca por: #{params[:keyword]}" end
%>

<table cellspacing="0" class="tablesorter" width="80%">
	<thead> 
		<tr>
    		<th style="width:35%;"><%=t 'attributes.name' %></th>
			<th style="width:30%;">Email</th>
			
			<th colspan="4" style="width:35%;"><%=t 'attributes.actions' %></th>
		</tr>
	</thead> 
	<tbody>
	  <% @Results.each do |user| %>
	    <tr>
	      <td><%= user.name %></td>
	      <td><%= user.email%></td>

		  <%if User.find(current_user.id).has_role? :admin %>
	      <td><%= link_to t('attributes.showing'), admin_user_path(user) %></td>
	      <td><%= link_to t('attributes.editing'), edit_admin_user_path(user) %></td>
	      <td><%= link_to t('attributes.exclude'), admin_user_path(user), :confirm => t('system_messages.notice_to_delete'), :method => :delete %></td>
		  <%end%>		  
		  <td><%= link_to "Verificar Ingressos!", admin_search_path(user) %></td>
	    </tr>
	  <% end %>
	</tbody>
</table>
<br><br>
<%= submit_tag "Voltar",:type=>"button",:onclick=>"window.open('"+admin_users_path+"','_self');", :class => "Bt_enviar", :style=>"margin-right: 5px;"%>
