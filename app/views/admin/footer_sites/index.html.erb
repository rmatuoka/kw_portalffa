<% title "Admin/Footer Sites" %>
<section class="content-header">
  <h1>Rodapés Sites
    <br/>
    <small>Verifique abaixo os Rodapés cadastrados</small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <a href="/admin">
        <i class="fa fa-dashboard"></i>
        Home
      </a>
    </li>
    <li class="active"> Rodapés Sites </li> 
  </ol>
</section>
  
<section class="content">
  <p><%= link_to "Novo Rodapé", new_admin_footer_site_path, :class=>"btn btn-primary" %></p>
  <div class="box">
    <div class="box-body table-responsive no-padding">
      <table cellspacing="0" class="table table-hover" width="80%">
        <thead> 
        <tr>
          <th>Nome</th>
	        <th>Ordem</th>
          <th>Legenda</th>
          <th>Destino</th>
          <th>Atualizado em</th>
          <th>Publicado</th>
        </tr>
        	</thead> 
	      <tbody>
        <% for footer_site in @footer_sites %>
          <tr>
            <td><%= footer_site.name %></td>
	          <td><%= footer_site.footer_order %></td>
            <td><%= footer_site.legend %></td>
            <td><%= footer_site.destination %></td>
            <td><%= footer_site.image_updated_at %></td>
            <td><%= footer_site.published %></td>
            <td>
              <%= link_to "Visualizar", [:admin, footer_site], :class=>"btn btn-default" %>
              <%= link_to "Editar", edit_admin_footer_site_path(footer_site), :class=>"btn btn-default" %>
              <%= link_to "Excluir", [:admin, footer_site], :confirm => 'Are you sure?', :method => :delete, :class=>"btn btn-default" %>
            </td>
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>    
  </div>
</section>  
  



