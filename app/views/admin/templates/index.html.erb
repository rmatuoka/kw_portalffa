<% title show_model_name(::Template, true) %>

<section class="content-header">
  <h1>
    <%= show_model_name(::Template, true) %>
    <br/>
    <small><%= t('activerecord.attributes.template.messages.index')%></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <a href="/admin">
        <i class="fa fa-dashboard"></i>
        Home
      </a>
    </li>
    <li class="active"> <%= show_model_name(::Template, true) %> </li> 
  </ol>
</section>

<section class="content">
  <p><%= submit_tag t('attributes.create_new'),:type=>"button",:onclick=>"window.open('"+new_admin_template_path+"','_self');", :class => "btn btn-primary"%> </p>
  <div class="box">
    <div class="box-body table-responsive no-padding">
      <table cellspacing="0" class="table table-hover" width="80%">
	      <thead> 
		      <tr>
			      <th style="width:30%;"><%=t 'attributes.name' %></th>
			      <th style="width:15%;"><%=t 'attributes.published' %> ?</th>
			      <th style="width:20%;"><%=t 'activerecord.attributes.template.template_type' %> </th>			
			      <th colspan="4" style="width:35%;"><%=t 'attributes.actions' %></th>
		      </tr>
	      </thead> 
	      <tbody>
	      <% for template in @templates %>
	      <tr <%='class=notactive' if !template.published%>>
		      <td><%= template.name %></td>
		      <td><%= print_active(template.published) %></td>
		      <td><%= traduz_template(template.template_type) %></td>		
		      <td><%= link_to t('attributes.showing'), [:admin, template], :class=>"btn btn-default" %></td>
		      <td><%= link_to t('attributes.editing'), edit_admin_template_path(template), :class=>"btn btn-default" %></td>
		      <td><%= link_to t('attributes.exclude'), [:admin, template], :confirm => t('system_messages.notice_to_delete'), :method => :delete, :class=>"btn btn-default" %></td>
		      <td><%= link_to show_model_name(::Webmodule, true) , admin_template_webmodules_path(template.id), :class=>"btn btn-primary" %></td>
	      </tr>
	      <% end %>
	      </tbody>
      </table>
    </div>    
  </div>
</section>
