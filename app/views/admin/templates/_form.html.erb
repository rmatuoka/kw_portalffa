<div id="Box_form">
<%= form_for [:admin, @template] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, :class=>"form-control" %>
  </p>

  <p>
    <%= f.label :published %>
    <%= f.check_box :published %>
  </p>

  <p>
    <%= f.label :template_type %>
	<%= f.select :template_type,([[t('activerecord.attributes.template.types.selection'), ""], [t('activerecord.attributes.template.types.one'), "1"],[t('activerecord.attributes.template.types.two'), "2"],[t('activerecord.attributes.template.types.three'), "3"],[t('activerecord.attributes.template.types.four'), "4"]]), :class => 'genForm_dropBox' %>
  </p>

  <br />
  <p class="box-footer"><%= submit_tag t('attributes.go_back'),:type=>"button",:onclick=>"window.open('"+admin_templates_path+"','_self');", :class => "btn btn-default", :style=>"margin-right: 5px;"%> <%= f.submit nil, :class => "btn btn-default" %></p>
<% end %>
</div>
