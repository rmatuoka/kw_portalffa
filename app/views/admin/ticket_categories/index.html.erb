<% title show_model_name(::TicketCategory, true) %>
<section class="content-header">
  <h1>
    <%= show_model_name(::TicketCategory, true) %>
    <br/>
    <small><%= t('activerecord.attributes.ticket_category.messages.index')%></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <a href="/admin">
        <i class="fa fa-dashboard"></i>
        Home
      </a>
    </li>
    <li class="active"> <%= show_model_name(::TicketCategory, true) %> </li> 
  </ol>
</section>

<section class="content">
  <p><%= submit_tag t('attributes.create_new'),:type=>"button",:onclick=>"window.open('"+new_admin_ticket_category_path+"','_self');", :class => "btn btn-primary"%> </p>
  <div class="box">
    <div class="box-body table-responsive no-padding">
      <table cellspacing="0" class="table table-hover" width="80%">
	      <thead> 
		      <tr>
			      <th style="width:35%;"><%=t 'activerecord.attributes.ticket_category.name' %></th>	
			      <th style="width:20%;"><%=t 'activerecord.attributes.ticket_category.order' %></th>			
			      <th style="width:15%;"><%=t 'activerecord.attributes.ticket_category.published' %></th>			
			      <!-- <th style="width:10%;"><%#=t 'activerecord.attributes.category.color' %></th> -->
			      <th colspan="3" style="width:30%;"><%=t 'attributes.actions' %></th>
		      </tr>
	      </thead> 
	      <tbody>
	      <% for ticket_category in @ticket_categories %>
	      <tr <%='class=notactive' if !ticket_category.published%>>
		      <td><%= ticket_category.name %></td>
		      <td><%= ticket_category.order %></td>		
		      <td><%= print_active(ticket_category.published) %></td>
		      <!-- <td><div style="width:18px; height:18px; background-color:#<%#= category.color %>; border:1px solid"></div></td> -->
		      <td>
		        <%= link_to t('attributes.showing'), [:admin, ticket_category], :class=>"btn btn-default" %>
		        <%= link_to t('attributes.editing'), edit_admin_ticket_category_path(ticket_category), :class=>"btn btn-default" %>
		        <%= link_to t('attributes.exclude'), [:admin, ticket_category], :confirm => t('system_messages.notice_to_delete'), :method => :delete, :class=>"btn btn-default" %>
	        </td>
	      </tr>
	      <% end %>
	      </tbody>
      </table>
    </div>    
  </div>
</section>
