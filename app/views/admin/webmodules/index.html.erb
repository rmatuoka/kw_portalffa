<% title show_model_name(::Webmodule, true)  %>
<section class="content-header">
  <h1>
    <%= show_model_name(::Webmodule, true)%>
    <br/>
    <small><%= t('activerecord.attributes.webmodule.messages.index')%></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <a href="/admin">
        <i class="fa fa-dashboard"> <%= show_model_name(::Webmodule, true)%> </i>
        Home
      </a>
    </li>
    <li class="active"> </li> 
  </ol>
</section>

<section class="content">
  <p>
    <%= submit_tag t('attributes.create_new'),:type=>"button",:onclick=>"window.open('"+new_admin_template_webmodule_path(@template)+"','_self');", :class => "btn btn-primary"%>
    <%= submit_tag t('attributes.go_back'),:type=>"button",:onclick=>"window.open('"+admin_templates_path+"','_self');", :class => "btn btn-default", :style=>"margin-right: 5px;"%>
  </p>
  <div class="box">
    <div class="box-body table-responsive no-padding">
      <table cellspacing="0" class="table table-hover" width="80%">
	      <thead> 
		      <tr>
			      <th style="width:30%;"><%= show_model_name(::Webpart)+" "+t('attributes.name') %></th>
			      <th style="width:25%;"><%=t 'activerecord.attributes.webmodule.position' %> </th>
			      <th style="width:15%;"><%=t 'attributes.published' %> ?</th>			
			      <th colspan="3" style="width:30%;"><%=t 'attributes.actions' %></th>
		      </tr>
	      </thead> 
	      <tbody>
	        <% for webmodule in @webmodules %>
	          <tr <%='class=notactive' if !webmodule.published%>>
	            <td><%= webmodule.webpart.name %></td>
	            <td><%= webmodule.position %></td>
	            <td><%= print_active(webmodule.published) %></td>
	            <td><%= link_to t('attributes.showing'), admin_template_webmodule_path(@template,webmodule), :class=>"btn btn-default" %></td>
	            <td><%= link_to t('attributes.editing'), edit_admin_template_webmodule_path(@template,webmodule), :class=>"btn btn-default" %></td>
	            <td><%= link_to t('attributes.exclude'), admin_template_webmodule_path(@template,webmodule), :confirm => t('system_messages.notice_to_delete'), :method => :delete, :class=>"btn btn-default" %></td>
	          </tr>
	        <% end %>
	      </tbody>
      </table>
    
    </div>    
  </div>
</section>



