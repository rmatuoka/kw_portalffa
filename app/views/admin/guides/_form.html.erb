<% content_for :footer do%>
<script>
jQuery("#has_visit").click(function(){
  if(jQuery("#has_visit").is(':checked'))
      jQuery("#show_visit_quantity").show();  // checked
  else
      jQuery("#show_visit_quantity").hide();  // unchecked 
});

</script>
<%end%>

<%= form_for [:admin, @guide] do |f| %>
  <%= f.error_messages %>
  <div class="form-group">
    <%= f.label :nome %><br />
    <%= f.text_field :name, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :tipo %><br />
    <%= f.select :guide_type_id, @guide_types, {:prompt => "Escolha o tipo"},{:class=>"form-control"} %> <%#=link_to t('attributes.add_new'), new_admin_guide_type_path%> 
  </div>  
  <div class="form-group">
    <%= f.label :departamento %><br />
    <%= f.text_field :department, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :endereco %><br />
    <%= f.text_field :address, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :bairro %><br />
    <%= f.text_field :district, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :cidade %><br />
    <%= f.text_field :city, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :estado %><br />
    <%= f.text_field :state, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :cep %><br />
    <%= f.text_field :zip_code, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :telefone %><br />
    <%= f.text_field :phone, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :fax %><br />
    <%= f.text_field :fax, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.text_field :email, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :internet %><br />
    <%= f.text_field :internet, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :obs %>
    <%= f.text_area :obs, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :lembrete %>
    <%= f.check_box :reminder, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :has_visit, "EstÃ¡ em visita?" %><br />
    <%= check_box_tag :has_visit, :class=>"form-control" %>
  </div>
  <div id="show_visit_quantity" style="display: none;">
    <div class="form-group">
      <%= label_tag :visit_quantity, "Quantidade de passageiros" %>
      <%= text_field_tag :visit_quantity,nil, :class=>"form-control" %>
    </div>         
  </div> 
  <div class="form-group">
    <%= submit_tag t('attributes.go_back'),:type=>"button",:onclick=>"window.open('"+admin_guides_path+"','_self');", :class => "Bt_enviar", :style=>"margin-right: 5px;"%> 
    <%= f.submit nil, :class => "Bt_enviar" %>
  </div>
<% end %>
<br /><br />
<% if !@guide_visitors.blank?%>
<h2>Visitas Cadastradas:</h2>
<table cellspacing="0" class="tablesorter" width="80%">
  <tr>
    <th style="width:20%;"><%=t 'activerecord.attributes.guide_visitor.year' %></th>
    <th style="width:20%;"><%=t 'activerecord.attributes.guide_visitor.passengers' %></th>
    <th colspan="3" style="width:10%;"><%=t 'attributes.actions' %></th>
  </tr>
  <% for guide_visitor in @guide_visitors %>
    <tr>
      <td><%= I18n.localize(guide_visitor.year, :format => :pdatetime) %></td>
      <td><%= guide_visitor.passengers %></td>
      <%if (User.find(current_user.id).has_role? :admin) %>
		  <td><%= link_to t('attributes.editing'), edit_admin_guide_visitor_path(guide_visitor) %></td>
		  <td><%= link_to t('attributes.exclude'), [:admin, guide_visitor], :confirm => t('system_messages.notice_to_delete'), :method => :delete %></td> 
		  <%end%>
    </tr>
  <% end %>
</table> 
<%end%>  



