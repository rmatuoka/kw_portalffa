<% title @guide.name %>
<section class="content-header">
  <h1><%= @guide.name %>
    <br/>
    <small><%= t('activerecord.attributes.guide.messages.show')%></small>    
  </h1>
  <ol class="breadcrumb">
    <li>
      <a href="/admin">
        <i class="fa fa-dashboard"></i>
        Home
      </a>
    </li>
    <li class="active"> <%= show_model_name(::Guide, true) %> </li> 
  </ol>
</section>
<section class="content">
  <div class="box">
    <div class="box-body">
      <p>
        <strong>Nome:</strong>
        <%= @guide.name %>
      </p>
      <p>
        <strong>Tipo:</strong>
        <%= @guide.guide_type.code %> - <%= @guide.guide_type.description %> 
      </p>
      <p>
        <strong>Departamento:</strong>
        <%= @guide.department %>
      </p>
      <p>
        <strong>Endere√ßo:</strong>
        <%= @guide.address %>
      </p>
      <p>
        <strong>Bairro:</strong>
        <%= @guide.district %>
      </p>
      <p>
        <strong>Cidade:</strong>
        <%= @guide.city %>
      </p>
      <p>
        <strong>Estado:</strong>
        <%= @guide.state %>
      </p>
      <p>
        <strong>CEP:</strong>
        <%= @guide.zip_code %>
      </p>
      <p>
        <strong>Telefone:</strong>
        <%= @guide.phone %>
      </p>
      <p>
        <strong>Fax:</strong>
        <%= @guide.fax %>
      </p>
      <p>
        <strong>Email:</strong>
        <%= @guide.email %>
      </p>
      <p>
        <strong>Internet:</strong>
        <%= @guide.internet %>
      </p>
      <p>
        <strong>Obs:</strong>
        <%= @guide.obs %><br /><br /><br />
      </p>

      <p>
        <strong>Lembrete:</strong>
        <%= print_active(@guide.reminder) %>
      </p>
      <br /><br />
      <% if !@guide_visitors.blank?%>
      <h2>Visita Cadastrada:</h2>
      <table class="table table-striped">
        <tr>
          <th class="col-md-4"><%=t 'activerecord.attributes.guide_visitor.year' %></th>
          <th class="col-md-4"><%=t 'activerecord.attributes.guide_visitor.passengers' %></th>
          <th class="col-md-4"><%=t 'attributes.actions' %></th>
        </tr>
        <% for guide_visitor in @guide_visitors %>
          <tr>
            <td><%= I18n.localize(guide_visitor.year, :format => :pdatetime) %></td>
            <td><%= guide_visitor.passengers %></td>
            <td>
              <%= link_to t('attributes.editing'), edit_admin_guide_visitor_path(guide_visitor), :class => "btn btn-lg btn-primary" %> 
              <%if (User.find(current_user.id).has_role? :admin) %>
        		    <%= link_to t('attributes.exclude'), [:admin, guide_visitor], :confirm => t('system_messages.notice_to_delete'), :method => :delete, :class => "btn btn-danger btn-lg" %>
        		  <%end%> 
		        </td> 
          </tr>
        <% end %>
      </table> 
      <%end%>  
      <p><%= link_to(t('attributes.go_back'),admin_guides_path, :class => "btn btn-lg btn-default" )%></p>
    </div>    
  </div>
</section>



