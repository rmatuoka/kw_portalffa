<% if !@mostrarshow%>

	<%= @Template = ::Template.find(:all,:conditions => ["`templates`.`id` = ?", @categoria.first.template_id])
	     if @Template.count > 0
	        @WebModules = @Template.first.webmodules.all_published
    
	        @WebModules.each do |modulo|
	          case modulo.position
	            when 1
	              @Position1 = modulo
	            when 2
	              @Position2 = modulo
	            when 3
	              @Position3 = modulo    
	            when 4      
	              @Position4 = modulo   
	            when 5
	              @Position5 = modulo
	            when 6
	              @Position6 = modulo
	            when 7
	              @Position7 = modulo
	            when 8
	              @Position8 = modulo	                 
	            else
	              puts "Fodeu"
	          end
	        end
	    end		
		render "layouts/verindex.html.erb"
	%>
<% else %>
	<%= @Template = ::Template.find(:all,:conditions => ["`templates`.`id` = ?", @conteudo.first.template_id])
	     if @Template.count > 0
	        @WebModules = @Template.first.webmodules.all_published

	        @WebModules.each do |modulo|
	          case modulo.position
	            when 1
	              @Position1 = modulo
	            when 2
	              @Position2 = modulo
	            when 3
	              @Position3 = modulo    
	            when 4      
	              @Position4 = modulo                    
	            else
	              puts "Fodeu"
	          end
	        end
	    end		
		render "layouts/vershow.html.erb"
	%>
<%end%>