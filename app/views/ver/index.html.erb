<% if !@mostrarshow%>

	<%= @Template = ::Template.find(:all,:conditions => ["`templates`.`id` = ?  and `templates`.`published` = 1 and `templates`.`active` = 1", @categoria.first.template_id])
	     if @Template.count > 0
			@noticiasrel = Array.new
	        @WebModules = @Template.first.webmodules.all_published
    
	        @WebModules.each do |modulo|
	          case modulo.position
	            when 1
	              @Position1 = modulo
	            when 2
	              @Position2 = modulo
	            when 3
	              @Position3 = modulo    
	            when 4      
	              @Position4 = modulo   
	            when 12
	              @Position12 = modulo
	            when 13
	              @Position13 = modulo
	            when 14
	              @Position14 = modulo
	            when 15
	              @Position15 = modulo	                 
	            else
	              puts "Fodeu"
	          end
			  if (modulo.webpart.webtype.to_i == 1)
				@noticiasrel.push(modulo.module_key)
			  end
	        end
	    end		
		render "layouts/verindex.html.erb"
	%>
<% else %>
	<%= @Template = ::Template.find(:all,:conditions => ["`templates`.`id` = ? and `templates`.`published` = 1 and `templates`.`active` = 1", @conteudo.first.template_id])
	     if @Template.count > 0
	        @WebModules = @Template.first.webmodules.all_published

	        @WebModules.each do |modulo|
	          case modulo.position
	            when 12
	              @Position12 = modulo
	            when 13
	              @Position13 = modulo
	            when 14
	              @Position14 = modulo    
	            when 15      
	              @Position15 = modulo                    
	            else
	              puts "Fodeu"
	          end
	        end
	    end		
		render "layouts/vershow.html.erb"
	%>
<%end%>